/*Programmers: Collin Palmer, and Zachariah Pelletier
 * MP1 COSC 211
 * Purpose: To draw a random card from a deck put it back in the deck while pulling many more cards
 * out only printing the ones of different suits until you have four cards of different suits, also 
 * to count how many times the program picked cards to finish this task.
 *
 */

 

public class Test 
{

	public static void main(String[] args) 
	{
		Deck d1=new Deck();
		Card [] ca=new Card[4];
		boolean done=false;
		int counter=1;
		ca[0]=d1.pickCard();// declaring what 1st position card will be for comparison;
		
		
		while(done==false){
			Card c1=new Card();
			c1=d1.pickCard();
			if(c1.compareSuits(ca[0])==false)
			{
				ca[1]=c1;
				c1=d1.pickCard();//setting the first off suit card into its position.
				counter++;
				if(c1.compareSuits(ca[0])==false&c1.compareSuits(ca[1])==false)
				{
					ca[2]=c1;
					c1=d1.pickCard();// setting the second off suit card into its position.
					counter++;
					if(c1.compareSuits(ca[0])==false&c1.compareSuits(ca[1])==false&c1.compareSuits(ca[2])==false)
					{
						ca[3]=c1;
						done=true;
						counter++;
						for(Card element:ca)//printing out only the set of cards that made it all the way through.
						{
							System.out.println(element);
						}
					}
					else{
						counter++;
					}

				}
				else{
					counter++;
				}

			}
			else
			{
				counter++;// counting any cards that may have been missed on the way through the loop.
			}


		}
		System.out.println("The number of picks is: "+counter);	
		System.out.println("Thank you for using Collin Palmer and Zachariah Pelletier Program");// output at the end to 
		//how many picks and programmers are again.
	}



}
